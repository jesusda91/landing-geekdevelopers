<div class="section-intro flexbox flex-column align-vertical bg-img">
	<h1>{{t "app.title"}}</h1>
	<h2>{{t "app.subtitle"}}</h2>
	<div class="flexbox" id="points">
		<div class="point point-small bg-yellow"></div>
		<div class="point point-small bg-green"></div>
		<div class="point point-small bg-red"></div>
		<div class="point point-small bg-blue"></div>
	</div>
</div>
<img src="/assets/imgs/combined-shape.svg" class="bottom-intro flexbox flex-end align-end">
<div class="section-about flex-wrap flexbox align-vertical justify-center" name="about" id="about">
	<div class="flexbox flex-wrap align-vertical justify-center">
		<div class="square-frame">
			<div class="square">
				<img src="assets/imgs/team2.jpeg" alt="">
			</div>
			<div class="ctn-lines" id="ctn-lines">
				<div class="line bg-yellow"></div>
				<div class="line bg-green"></div>
				<div class="line bg-red"></div>
				<div class="line bg-blue"></div>
			</div>
		</div>
	</div>
	<div class="about">
		{{t "app.about"}}
		<div>
			<img src="assets/imgs/gd.svg">
		</div>
	</div>
	<img src="/assets/imgs/bottom-intro.svg" class="top-team flexbox flex-end align-end">
</div>
<div class="section-team flexbox justify-center align-vertical flex-wrap" id="team">
	<div class="flexbox flex-column align-vertical justify-center title-ctn">
		<h2>{{t "header.team"}}</h2>
		<div class="separator-line"></div>
	</div>
	{{#each model as |member|}}
		<div class="circle-ctn flexbox flex-column justify-center align-vertical">
			<div class="circle">
				<img src={{member.image}} alt="">
			</div>
			<p class="name">{{member.name}}</p>
			<p class="charge">{{member.charge}}</p>
			<div class="social flexbox justify-center align-vertical">
				{{#if member.linkedin}}
					<a href={{member.linkedin}} target="_blank">
						<i class="ic_linkedin"></i>
					</a>
				{{/if}}
				{{#if member.github}}
					<a href={{member.github}} target="_blank">
						<i class="ic_github"></i>
					</a>
				{{/if}}
				{{#if member.artstation}}
					<a href={{member.artstation}} target="_blank">
						<i class="ic_artstation"></i>
					</a>
				{{/if}}
			</div>
		</div>
	{{/each}}
</div>
<div class="section-projects flex-wrap flexbox align-vertical justify-center" name="projects" id="projects">
	<a href="http://medialop.com/" target="_blank" class="appear-logo"><img src="assets/imgs/medialop.svg"></a>
	<img src="assets/imgs/hummi.svg" class="img-bigger appear-logo">
	<a href="https://sirjohnsandwich.com/" target="_blank"><img src="assets/imgs/sirjohn.svg" class="img-bigger appear-logo"></a>
	<img src="assets/imgs/accesio.svg" class="appear-logo">
	{{!-- <a href="https://www.instagram.com/tenemoslaformula/" target="_blank"><img src="assets/imgs/nerd.svg"></a> --}}
	<a href="https://cryptoblackmoon.github.io/" target="_blank"><img src="assets/imgs/blackgold.png" class="blackgold appear-logo"></a>
	<img src="/assets/imgs/bottom-intro.svg" class="bottom-team flexbox flex-end align-end">
</div>
<div class="footer flex-wrap flexbox align-vertical space-between" name="contact" id="contact">
	<div class="contact-txt flex-column">
		<div class="flexbox">
			<div class="point point-large bg-yellow"></div>
			<span class="contact-text text1">admin@geekdevelopers.co</span>
		</div>
		<div class="flexbox">
			<div class="point point-large bg-green"></div>
			<span class="contact-text text2">Calle 5a #39 - 93 Torre 2</span>
		</div>
		<div class="flexbox">
			<div class="point point-large bg-red"></div>
			<span class="contact-text text3">Medellin, Colombia</span>
		</div>
		<div class="flexbox">
			<div class="point point-large bg-blue"></div>
			<span class="contact-text text4">+57 3006735230</span>
		</div>
	</div>
	<div>
		<img src="assets/imgs/geekdevelopers.svg" alt="">
	</div>
</div>